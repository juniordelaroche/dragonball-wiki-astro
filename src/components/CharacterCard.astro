---
interface Props {
  name: string;
  image: string;
}

const { name, image } = Astro.props
---

<a href={`/character/${name.toLowerCase().replace(/[. ()]/g, "")}`}>
  <article class="group h-full bg-slate-700 p-2 rounded transition duration-300 hover:cursor-pointer hover:scale-105 hover:shadow-md hover:shadow-slate-900">
    <img transition:name={`personaje-${name}`} src={image} alt={name} class="h-64 object-contain mx-auto transition duration-300 group-hover:scale-105"/>
    <h5 class="text-center font-bold">{name}</h5>
  </article>
</a>