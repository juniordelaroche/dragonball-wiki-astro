---
// Code fense - codigo del servidor
import '../styles/global.css'
interface Props {
	title: string;
}

const {title} = Astro.props
---
<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.jpg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title}</title>
	</head>
	<body class="bg-slate-800 text-slate-100 m-auto max-w-5xl">
		<main>
			<slot />
		</main>
	</body>
</html>

